call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

set showcmd
set history=500
set laststatus=2 " always show status line
set gfn=Envy\ Code\ R\ Normal\ 11

set shiftwidth=4
set tabstop=4
set noexpandtab

syn on
set mouse=a
set cindent
set autoindent
set smartindent
set showmatch
set ignorecase
set smartcase
set incsearch
set hlsearch
set number
set backupdir=~/vim_backup
set directory=~/vim_backup



filetype plugin on
filetype indent on

"zz centers the screen 
"on incsearch center the screen
nmap n nzz
nmap N Nzz
"navigation on wrapped lines
nmap k gk
nmap j gj


"jquery syntax 
au BufRead,BufNewFile jquery.*.js set ft=javascript syntax=jquery

let mapleader = ","
" insert comment
map <Leader>c :TComment<CR>

" open NerdTree with f2
map <Leader>n :NERDTreeToggle<CR>


" Edit another file in the same directory as the current file
" uses expression to extract path from current file's path
map <Leader>s :vsplit <C-R>=expand("%:p:h") . '/'<CR>
imap <C-l> <Space>=><Space>

" Better movement around window splits
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l


set undolevels=1000		" use many muchos levels of undoness 
set title							"  change the terminal's title

colorscheme molokai

" regular copy and paste on insert mode and visual mode
imap <C-c> <Esc>"+y 
imap <C-v> <Esc>"+gP 

" Ack
set grepprg=ack
let g:ackprg="ack-grep -H --nocolor --nogroup --column"


" Settings for ruby 
map <leader>sr  :set syntax=ruby   ai et ts=2 sw=2 tw=0<CR>
map <leader>sj  :set ai et ts=4 sw=4 tw=0<CR>

map <leader>sl  :colorscheme solarized<CR>:set background=light<CR>

autocmd FileType ruby,eruby,yaml set ai sw=2 sts=2 et

" Start where I left off
if has("autocmd")
  au BufReadPost * if line("'\"") > 0 && line("'\"") <= line("$")
    \| exe "normal! g'\"" | endif
endif
